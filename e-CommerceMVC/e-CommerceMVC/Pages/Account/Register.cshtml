@page
@model ECommerceMVC.Pages.Account.RegisterModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<head>
</head>

<body>
    <div class="container" style="margin-top:20px;">
        <form method="post">
            <div class="form-group row">
                <label asp-for="RegisterData.Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.Email" class="form-control" />
                    <span asp-validation-for="RegisterData.Email"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RegisterData.FirstName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.FirstName" class="form-control" />
                    <span asp-validation-for="RegisterData.FirstName"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RegisterData.LastName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.LastName" class="form-control" />
                    <span asp-validation-for="RegisterData.LastName"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RegisterData.BirthDay" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.BirthDay" class="form-control" />
                    <span asp-validation-for="RegisterData.BirthDay"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RegisterData.Password" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.Password" class="form-control" />
                    <span asp-validation-for="RegisterData.Password"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RegisterData.ConfirmPassword" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="RegisterData.ConfirmPassword"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RegisterData.TypeOfBusiness" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.TypeOfBusiness" class="form-control" />
                    <span asp-validation-for="RegisterData.TypeOfBusiness"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RegisterData.FavoriteColor" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.FavoriteColor" class="form-control" />
                    <span asp-validation-for="RegisterData.FavoriteColor"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RegisterData.Theme" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="RegisterData.Theme" class="form-control" />
                    <span asp-validation-for="RegisterData.Theme"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-9 offset-sm-3">
                    <button type="submit" class="btn btn-primary" style="margin-top:20px;">Submit</button>
                </div>
            </div>
        </form>
    </div>
</body>