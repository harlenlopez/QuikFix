@page
@model ECommerceMVC.Pages.Account.LoginModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<body>
    <div class="container" style="margin-top:30px;">
        <form method="post" class="col-sm-8 mx-auto">
            <div class="row">
                <img src="~/Images/logo.png" alt="logo" class="w-25 h-25 mx-auto"/>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-sm-12 col-form-label"></label>
                <div class="col-sm-12">
                    <input asp-for="Input.Email" class="form-control" />
                    <span  class="invalid-feedback" asp-validation-for="Input.Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="col-sm-12 col-form-label"></label>
                <div class="col-sm-12">
                    <input asp-for="Input.Password" class="form-control" />
                    <span  class="invalid-feedback" asp-validation-for="Input.Password"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary px-3">Login</button>
                </div>
                <div class="col-6 text-right">
                    <a asp-page="/account/register" class="mr-2">Register</a>

                </div>
            </div>
        </form>
       
    </div>

</body>

