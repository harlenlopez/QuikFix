@page
@model ECommerceMVC.Pages.Account.ProfileModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<body>

    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group row">
            <label asp-for="UserInfo.PreviousPassword" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="UserInfo.PreviousPassword" />
                <span asp-validation-for="UserInfo.PreviousPassword"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserInfo.ChangePassword" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="UserInfo.ChangePassword" class="form-control" />
                <span asp-validation-for="UserInfo.ChangePassword"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserInfo.ConfirmPassword" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="UserInfo.ConfirmPassword" class="form-control" />
                <span asp-validation-for="UserInfo.ConfirmPassword"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9 offset-sm-3">
                <button type="submit" class="btn btn-primary" style="margin-top:20px;">Submit</button>
            </div>
        </div>
    </form>

</body>