@page
@model ECommerceMVC.Pages.Checkout.ReceiptModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/styles/Cart/theme.css?t=@DateTime.Now.Ticks" type="text/css" />
</head>

<body>
    <div class="containe text-center">
        <img src='https://i.imgur.com/rocGIxN.png' alt='Logo' style='margin-bottom:50px' />
        <h5>Thank you so much @Model.ReceiptInfo.FirstName @Model.ReceiptInfo.LastName</h5>
        <h3 style='margin-bottom:15px'>
            Receipt
        </h3>
        <p>First Name: @Model.ReceiptInfo.FirstName</p>
        <p>Last Name: @Model.ReceiptInfo.LastName</p>
        <p>Shipping Address: @Model.ReceiptInfo.ShippingAddress</p>
        <p>City: @Model.ReceiptInfo.City</p>
        <p>State/Province: @Model.ReceiptInfo.State</p>
        <p>Country: @Model.ReceiptInfo.Country</p>
        <p>Payment Method: @Model.ReceiptInfo.PaymentMethod</p>
    </div>
</body>