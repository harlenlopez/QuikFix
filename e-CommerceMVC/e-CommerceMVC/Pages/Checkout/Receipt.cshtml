@page
@model ECommerceMVC.Pages.Checkout.ReceiptModel
@using ECommerceMVC.Models
@{
    List<CartItems> ListProduct = new List<CartItems>();
    Layout = "_Layout";
    ViewBag.ListProduct = TempData["ListOfProduct"];
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/styles/Cart/theme.css?t=@DateTime.Now.Ticks" type="text/css" />
</head>

<body>

    <div class="containe text-center">
        <img src='https://i.imgur.com/rocGIxN.png' alt='Logo' style='margin-bottom:50px' />
        <h5>Thank you so much!</h5>
        <h3 style='margin-bottom:15px'>
            Receipt
        </h3>
        @foreach (var item in ViewBag.ListProduct)
        {
            <h5>@item.Product.Name</h5>
            <p class="text mx-auto" id="receipt-description">@item.Product.Description</p>
            <p>Price: $@item.Product.Price</p>
            <p>Qty: @item.Quantity</p>
        }
        <h5>Total: $@Model.TotalPrice</h5>
        <a asp-page="/Shop/Index" class="btn btn-primary mt-3">Back To Shop</a>
    </div>
</body>